{
  "manifest_version": 3,
  "name": "hapemxg_Copilot",
  "version": "1.1",
  "description": "自定义API的侧边栏AI助手 (Agent Version)",
  "icons": {
    "128": "icon.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  }
}